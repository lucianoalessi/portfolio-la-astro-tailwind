---
import LinkInline from "./LinkInline.astro"

interface Props {
  date: string
  title: string
  institution: string
  description: string
  link: string
  image: string
}

const { date, title, institution, description, link, image } = Astro.props

---

<article class="flex flex-col space-x-0 space-y-2 group md:flex-row md:space-x-2 md:space-y-0">
  <div class="w-full md:w-1/5 mr-8">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-2 shadow-xl overflow-clip lg:border lg:border-gray-800">
      <img alt={title} class="object-cover object-top w-64 h-full sm:h-full" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-4/5 md:max-w-xl">
    <h3 class="mt-2 text-lg font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <h4 class="font-semibold text-base text-white">{institution}</h4>
    <time class="p-0 m-0 text-sm text-white/80">{date}</time>
    <div class="mt-2 text-sm text-gray-700 dark:text-gray-400">{description}</div>
    <footer class="flex items-end justify-start mt-1 gap-x-2">
      <LinkInline href={link}>
        View certificate{" "}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-3 icon icon-tabler icon-tabler-chevron-right"
          width="18"
          height="18"
          viewBox="0 0 20 20"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <>
            <path stroke="none" d="M0 0h20v20H0z" fill="none" />
            <path d="M7 5l5 5l-5 5" />
          </>
        </svg>
      </LinkInline>
    </footer>
  </div>
</article>


